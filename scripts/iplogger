#!/bin/bash
remoteIp=`dig +short myip.opendns.com @resolver1.opendns.com`
timeOfRelease=`date`
geolocation=`geoiplookup $remoteIp`
echo "$timeOfRelease" >> /var/log/smiley-scp/ip.log
echo "$remoteIp" >> /var/log/smiley-scp/ip.log
echo "$geolocation" >> /var/log/smiley-scp/ip.log

sleep 60
screen -d -m -S iplogger scripts/iplogger

